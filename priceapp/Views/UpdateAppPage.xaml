<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="priceapp.Views.UpdateAppPage"
             Style="{StaticResource PageStyle}"
             Padding="0">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Доступна нова версія додатку"
                   TextColor="{ StaticResource ColorPrimary}"
                   Style="{StaticResource PageTitle}"
                   HorizontalTextAlignment="Center" />
            <Label
                Text="Схоже, що вийшла нова версія додатку, яка має нову функціональність або виправлення помилок. Щоб продовжити користуватись усіма перевагами priceapp - бідь ласка, оновіть додаток."
                HorizontalTextAlignment="Center"
                Style="{StaticResource TextStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>