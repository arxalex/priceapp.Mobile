<?xml version="1.0" encoding="utf-8"?>

<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:priceapp.Views;assembly=priceapp"
       x:Class="priceapp.Views.MainPage"
       Visual="Material"
       NavBarIsVisible="False"
       TabBarIsVisible="True">
    <TabBar>
        <Tab Title="Товари">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialOutlined"
                                 Glyph="&#xe8b6;">
                </FontImageSource>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:CatalogAndSearchPage}"></ShellContent>
        </Tab>
        <Tab Title="Кошик">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialOutlined"
                                 Glyph="&#xe8cc;">
                </FontImageSource>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}"></ShellContent>
        </Tab>
        <Tab Title="Акаунт">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialOutlined"
                                 Glyph="&#xe7fd;">
                </FontImageSource>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:AccountPage}"></ShellContent>
        </Tab>
    </TabBar>
</Shell>